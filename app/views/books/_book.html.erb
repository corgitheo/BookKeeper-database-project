<div class="book">
  <div class="card">
    <div class="card-image">
      <figure class="image is-3by4">
        <%= link_to image_tag(book.thumbnail, alt: "#{book.title}"), book %>
      </figure>
    </div>
    <div class="card-content">
      <div class="media">
        <div class="media-content">
          <p class="title is-4"><%= book.title %></p>
          <p class="subtitle is-6"><%= book.author %></p>
        </div>
      </div>

      <div class="content">
         <% if user_signed_in? %>

          <% if user_added_to_library?(current_user, book) %>
            <% if book.lent != "" %>
            <p><strong>Lent To: <%= book.lent %></strong></p>
            <% end %>
            <%= link_to 'Remove from library', book, method: :delete, class:"button is-danger is-fullwidth" %> 
            <!--data: { confirm: "Are you sure you want to delete? "}-->
          <% end %>

        <% end %>
      </div>
    </div>
  </div>
  <div class="mini-controls">
      <!--<%= link_to 'Edit', edit_book_path(book), class:"button is-small is-rounded" %>-->
      <!--<%= link_to 'Delete', book, method: :delete, data: { confirm: "Are you sure you want to delete? "}, class:"button is-small is-rounded" %>-->
  </div>
</div>