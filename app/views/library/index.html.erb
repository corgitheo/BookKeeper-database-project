<section class="hero">
  <div class="hero-body">
    <div class="container has-text-centered">
      <h1 class="title">
        <%= current_user.name %>'s Library
      </h1>
      <h2 class="subtitle">
        Manage your books here
      </h2>
    </div>
  </div>
</section>

<section class="section">
  <% if @library_books.exists? %>
    <div class="book-grid">
      <%= render @library_books, book: @book %>
    </div>
  <% else %>
  <article class="message">
    <div class="message-body">No books here yet. <%= link_to 'Add some', new_book_path %>.</div>
  </article>
  <% end %>

</section>